<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookmarkShelf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_300</item>
        <item name="colorPrimaryVariant">@color/brown_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceModalBottomSheetDialog" parent="">
        <item name="color">@android:color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.NavItem" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40%</item>
        <item name="cornerSizeBottomRight">40%</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeTopLeft">10%</item>
    </style>

    <style name="BookmarkShelf.Widget.TextView.Preview" parent="">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BookmarkShelf.Widget.TextView.Preview.Title">
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookmarkShelf.Widget.TextView.Preview.Description">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>