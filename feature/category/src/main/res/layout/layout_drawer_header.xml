<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/profile_icon_image_view"
        android:layout_width="@dimen/middle_icon"
        android:layout_height="@dimen/middle_icon"
        android:layout_margin="@dimen/middle_margin"
        android:contentDescription="@string/description_of_preview_image"
        android:src="@drawable/ic_baseline_android_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginStart="@dimen/middle_margin"
        android:layout_marginLeft="@dimen/middle_margin"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_image_view"
        app:layout_constraintLeft_toRightOf="@id/profile_icon_image_view"
        app:layout_constraintTop_toTopOf="@id/profile_icon_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>